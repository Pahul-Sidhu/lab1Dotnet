@page
@model lab1.Pages.IndexModel

@{
    ViewData["Title"] = "Zodiac Signs";
}

<h1>Zodiac Signs</h1>

<form method="post">
    <div class="form-group" style="margin: 10px;">
        <label for="year">Enter a year:</label>
        <input type="number" id="year" name="year" class="form-control" min="1900" max="@DateTime.Now.Year + 1" required />
        <span class="text-danger field-validation-valid" data-valmsg-for="year" data-valmsg-replace="true"></span>
    </div>
    <button type="submit" class="btn btn-primary">Get Zodiac</button>
    <button type="reset" class="btn btn-secondary" onclick="location.reload();">Clear</button>
</form>

@if (Model.ZodiacSign != null)
{
    <h2>Your Zodiac Sign: @Model.ZodiacSign</h2>
    <img src="~/images/@(Model.ZodiacSign.ToLower()).png" alt="@Model.ZodiacSign" />
} 

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
